<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.alejandro_castilla.autorestandroidexample.MainActivity">

    <TextView
            android:id="@+id/title"
            android:text="Battlefield 4 stats"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/data"
            android:text="Loading..."
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp" android:layout_below="@+id/title" android:layout_centerHorizontal="true"/>

</RelativeLayout>
